<RowTemplate>
    <MudTd DataLabel="Código">@context.Ticker</MudTd>
    <MudTd DataLabel="Tipo do Ativo">@GetAssetTypeDescription(context.Type)</MudTd>
    <MudTd DataLabel="Tipo">
