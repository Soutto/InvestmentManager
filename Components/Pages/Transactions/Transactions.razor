    <MudTextField @bind-Value="searchString" Placeholder="Pesquisar (Código ou Data)" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
<MudSpacer />
<MudSpacer />
<MudSpacer />
<MudSpacer />
<MudSpacer />
<MudSpacer />
</ToolBarContent>

