@using ApexCharts
@using InvestmentManager.Shared.Models.Application

@page "/portfolio"

@if (heritageEvolution is null || heritageEvolution.Records.Count == 0)
{
    <MudProgressLinear Color="MudBlazor.Color.Primary" Indeterminate="true" Class="my-7" />
}
else
{


            <MudPaper Style="background-color:#F5F5F5;" MaxWidth="1100px" MaxHeight="900px" Class="pa-4">
                    <ApexChart TItem="DataItem"
                               Title="Evolução Patrimônio" 
                               Height="600" 
                               Width="1600">
                        <ApexPointSeries TItem="DataItem"
                                         Items="dataItems"
                                         Name="Patrimônio total (R$)"
                                         SeriesType="SeriesType.Line"
                                         XValue="e => e.Date"
                                         YValue="e=> e.Revenue" />
                        <ApexPointSeries TItem="DataItem"
                                         Items="dataItems2"
                                         Name="Valor total investido (R$)"
                                         SeriesType="SeriesType.Line"
                                         XValue="e => e.Date"
                                         YValue="e=> e.Revenue" />
                    </ApexChart>
                </MudPaper>



}


